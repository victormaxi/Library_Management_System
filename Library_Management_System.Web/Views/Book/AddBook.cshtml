@model Library_Management_System.Core.ViewModels.AddBookVM

@{
    ViewData["Title"] = "AddBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddBook</h1>

<h4>AddBookVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBook">

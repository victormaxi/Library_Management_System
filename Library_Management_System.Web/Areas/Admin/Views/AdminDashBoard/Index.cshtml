@model List<Library_Management_System.Core.ViewModels.BookVM>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
    @if(Model != null)
        {
          <div class="container">
                 <table class="table">
                
                        <tr>
                            <th>Book Title</th>
                        
                            <th>Book Code</th>
                            <th></th>
                        </tr>
                
                
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.BookTitle
                                </td>
                                <td>
                                    @item.BookCode
                                </td>
                            </tr>

                        }
                
                 </table>
           </div>
     }

    

</body>
</html>
